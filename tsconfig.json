{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,

    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
